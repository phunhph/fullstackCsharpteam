@using System.Globalization;
@model List<fullstackCsharp.Models.ViewModel.MonthyPayoffViewModel>

@{
    ViewData["Title"] = "Monthly Payoffs";
}

<h1>@ViewData["Title"]</h1>

<form method="get">
    <label for="month">Month:</label>
    <select name="month" id="month">
    <option value="">-- Select Month --</option>
    @for (int i = 1; i <= 12; i++)
    {
                    <option value="@i" selected="@(i == ViewBag.Month ? "selected" : "")"> @DateTimeFormatInfo.CurrentInfo.GetMonthName(i)</option>

    }
</select>

<label for="year">Year:</label>
<select name="year" id="year">
    <option value="">-- Select Year --</option>
    @for (int i = DateTime.Now.Year; i >=2001; i--)
    {
                    <option value="@i" selected="@(i == ViewBag.Year ? "selected" : "")">@i</option>
    }
</select>

    </select>

    <button type="submit">Filter</button>
</form>

@if (Model.Count > 0)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Total Payoff</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FullName</td>
                    <td>@item.TotalPayOffMonth</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No payoffs found.</p>
}
