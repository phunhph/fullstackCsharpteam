@model fullstackCsharp.Models.Staff

<h4>Staff</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>

                <fieldset>
                    <legend>Student Mark:</legend>
                    <label for="ID">IDNV:</label>
                    <input type="text" name="Manv" id="id">
                    <br>
                    <br>
                    <label for="name">Name:</label>
                    <input type="text" name="Tennv" id="name" placeholder="nhập họ và tên:) ">
                    <br>
                    <br>
                    <label for="gender">Giới Tính:</label>
                    <input type="text" name="Sex" id="SEX">
                    <br>
                    <br>
                    <label for="Address">Address:</label>
                    <input type="text" name="Address" id="Address" placeholder="nhập Address:) ">
                    <br>
                    <label for="Rank">Rank:</label>
                    <input type="text" name="Rank" id="Rank" placeholder="nhập Rank:) ">
                    <br>
                    <br>
                    <label for="user">user:</label>
                    <input type="text" name="User" id="user" placeholder="nhập user :) ">
                    <br>
                    <br>
                    <label for="pass">pass:</label>
                    <input type="text" name="Password" id="pass" placeholder="nhập pass :) ">
                    <br>
                    <br>

                </fieldset>

            </div>
            <div class="form-group">

                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

