@model fullstackCsharp.Models.Staff

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Staff</title>
    <link href="~/css/staff.css" rel="stylesheet" />
</head>
<body>
    <div class=" d-flex justify-content-center">
        

        <table class="table-bordered border-dark ">
            <tbody>
                <tr class="text-center  " id="popertyTableTh">

                    <th> Mã nhân viên</th>
                    <th> Tên nhân viên</th>
                    <th> Giới tính</th>
                    <th> add</th>
                    <th> user</th>
                    <th> pass</th>
                    
                    <td id="propertyDelete">Delete</td>
                    
                </tr>
                @{
                    List<Staff> stafflist = ViewData["staffList"] as List<Staff>;



                    @foreach (Staff staff in stafflist)
                    {
                        <tr border="2" id="popertyTableTd">
                           
                            <td>
                                @{
                                    var url = "/staff/Edit/" + staff.Id_nv;

                                }
                                <a href="@url">@staff.Id_nv</a>
                            </td>
                           
                            <td> @staff.Namenv </td>
                            <td> @staff.Gender</td>
                            <td> @staff.Address</td>
                            <td> @staff.User</td>
                            <td> @staff.Password</td>
                            <td id="checkBoxDelete" > <input type="checkbox" name="deleted" id="delete" value="@staff.Id_nv" /></td>
                        </tr>

                    }


                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                         aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Danh sách mã nhân viên muốn xóa</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div id="deleteModalBody" class="modal-body">
                                    ...
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                                        Close
                                    </button>
                                    <button type="button" class="btn btn-primary" onclick="conf()">Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </tbody>
        </table>
    </div>
    <div>
        <p class=" mt-3 d-flex justify-content-center">
            <a href="" class="btn btn-primary" onclick="confSetting()">Setting</a>
        </p>
        <p class="d-none">

            <a class="btn btn-dark" asp-area="" asp-controller="staff" asp-action="Create">thêm</a>
            <a href="#" onclick="conf2()"> Delete</a>
            <form id="Deleted" asp-action="Delete">
                <input type="hidden" name="deleteList" value="" id="deleteList" />
                <a asp-action="Index"></a>
            </form>

        </p>
    </div>



    <script src="~/js/Staff.js"></script>

</body>


</html>




