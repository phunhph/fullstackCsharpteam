@model fullstackCsharp.Models.Attendane

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Attendane</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdA" />
            <div class="form-group">
                <label asp-for="IdU" class="control-label">Tên nhân viên</label>
                <select asp-for="IdU" class="form-control" asp-items="ViewBag.IdU"></select>
                <span asp-validation-for="IdU" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AttendaneDate" class="control-label">Ngày</label>
                <input asp-for="AttendaneDate" type="date" class="form-control" />
                <span asp-validation-for="AttendaneDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Checkin" class="control-label">Giờ vào</label>
                <input asp-for="Checkin" type="time" class="form-control" />
                <span asp-validation-for="Checkin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Checkout" class="control-label">Giờ ra</label>
                <input asp-for="Checkout" type="time" class="form-control" />
                <span asp-validation-for="Checkout" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-info" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
