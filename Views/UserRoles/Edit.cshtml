@model fullstackCsharp.Models.UserRole

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Sửa </h1>

<h4>Phân quyền</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdUr" />
            <div class="form-group">
                <label asp-for="IdU" class="control-label">Nhân viên</label>
                <select asp-for="IdU" class="form-control" asp-items="ViewBag.IdU"></select>
                <span asp-validation-for="IdU" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdR" class="control-label">Quyền</label>
                <select asp-for="IdR" class="form-control" asp-items="ViewBag.IdR"></select>
                <span asp-validation-for="IdR" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-info" asp-action="Index">Trở lại</a>
</div>

