@model fullstackCsharp.Models.User
@{
    var id = Context.Session.GetInt32("idu");
}
<!-- Latest compiled and minified CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Latest compiled JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<style>
    .gradient-custom {
        /* fallback for old browsers */
        background: #f6d365;
        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1));
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1))
    }
</style>
<section class="vh-150" style="background-color: #f4f5f7;">
    <div class="container py-5 h-200">
        <div class="row d-flex justify-content-center align-items-center h-150">
            <div class="col col-lg-6 mb-4 mb-lg-0">
                <div class="card mb-3" style="border-radius: .5rem;">
                    <div class="row g-0">
                        <div class="col-md-4 gradient-custom text-center text-white"
                             style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                            <img src="@Html.DisplayFor(m=>m.Avatar)"
                                  class="img-fluid my-5" style="width: 100px;" />
                            <h3>@Html.DisplayFor(m=>m.FullName)</h3>
                            <h4>@Html.DisplayFor(m=>m.IdPositionNavigation.Position1)</h4>
                            <p>@Html.DisplayFor(m=>m.IdDNavigation.Department1)</p>
                            <i class="far fa-edit mb-5"></i>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body p-4">
                                <h6>PHương thức liên lạc</h6>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h6>Email</h6>
                                        <p class="text-muted">@Html.DisplayFor(m=>m.Email)</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Phone</h6>
                                        <p class="text-muted">@Html.DisplayFor(m=>m.PhoneNumber)</p>
                                    </div>
                                </div>
                                <h6>Thông tin</h6>
                                <hr class="mt-0 mb-4">
                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h6>User name</h6>
                                        <p class="text-muted">@Html.DisplayFor(m=>m.UserName)</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Id Card</h6>
                                        <p class="text-muted">@Html.DisplayFor(m=>m.IdCard)</p>
                                    </div>
                                </div>
                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h6>Gender</h6>
                                        <p class="text-muted">@Html.DisplayFor(m=>m.Gender)</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Adress</h6>
                                        <p class="text-muted">@Html.DisplayFor(m=>m.Adress)</p>
                                    </div>
                                </div>
                            </div>
                            <a class="btn btn-success" asp-action="EditProfile" asp-route-id="@id">Thay đổi thông tin cá nhân</a> |
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>