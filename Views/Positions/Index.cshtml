@model IEnumerable<fullstackCsharp.Models.Position>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Chức vụ</h1>

<p>
    <a class="btn btn-outline-info" asp-action="Create">Thêm mới</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
               Chức vụ
            </th>
            <th>
                Hệ số cấp bậc
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Position1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Coefficient)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.IdPosition">Sửa</a> |
                <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.IdPosition">Chi tiết</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdPosition">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
