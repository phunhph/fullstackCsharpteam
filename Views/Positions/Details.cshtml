@model fullstackCsharp.Models.Position

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Chi tiết</h1>

<div>
    <h4>Chức vụ</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Chức vụ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Position1)
        </dd>
        <dt class = "col-sm-2">
            Hệ số chức vụ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Coefficient)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.IdPosition">Sửa</a> |
    <a class="btn btn-outline-info" asp-action="Index">Trở lại</a>
</div>
