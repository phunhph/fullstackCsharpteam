@model fullstackCsharp.Models.Position

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Sửa</h1>

<h4>Chức vụ</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPosition" />
            <div class="form-group">
                <label asp-for="Position1" class="control-label">Chức vụ</label>
                <input asp-for="Position1" class="form-control" />
                <span asp-validation-for="Position1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Coefficient" class="control-label">Hệ số cấp bậc</label>
                <input asp-for="Coefficient" class="form-control" />
                <span asp-validation-for="Coefficient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-info" asp-action="Index">Trở lại</a>
</div>

