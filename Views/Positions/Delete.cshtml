@model fullstackCsharp.Models.Position

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Xóa</h1>

<h3>Bạn có chắc chắn muốn xóa ?</h3>
<div>
    <h4>Chức vụ</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Chức vụ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Position1)
        </dd>
        <dt class = "col-sm-2">
            Hệ số cấp bậc
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Coefficient)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPosition" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a class="btn btn-outline-info" asp-action="Index">Trở lại</a>
    </form>
</div>
