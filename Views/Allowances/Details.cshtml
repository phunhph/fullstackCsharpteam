@model fullstackCsharp.Models.Allowance

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Allowance</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
          Tên nhân viên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdUNavigation.FullName)
        </dd>
        <dt class="col-sm-2">
            Hỗ trợ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AllowanceAmount)
        </dd>
        <dt class="col-sm-2">
            Ngày tạo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreateMonth)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.IdAllowance">Sửa</a> |
    <a class=" btn btn-outline-info" asp-action="Index">Trở về</a>
</div>
