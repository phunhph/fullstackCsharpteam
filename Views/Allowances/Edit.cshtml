@model fullstackCsharp.Models.Allowance

@{
    ViewData["Title"] = "Edit Allowance";
}

<h2> Edit Allowance</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdAllowance" />
            <div class="form-group">
                <label asp-for="IdU" class="control-label">Tên nhân viên</label>
                <select asp-for="IdU" class="form-control" asp-items="ViewBag.IdU"></select>
                <span asp-validation-for="IdU" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AllowanceAmount" class="control-label">Hỗ trợ</label>
                <input asp-for="AllowanceAmount" class="form-control" />
                <span asp-validation-for="AllowanceAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateMonth" class="control-label">Ngày tạo</label>
                <input asp-for="CreateMonth" class="form-control" />
                <span asp-validation-for="CreateMonth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-info" asp-action="Index">Trở lại</a>
</div>

