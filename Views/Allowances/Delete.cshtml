@model fullstackCsharp.Models.Allowance

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Allowance</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            Tên nhân viên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdUNavigation.FullName)
        </dd>
        <dt class = "col-sm-2">
            Hỗ trợ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AllowanceAmount)
        </dd>
        <dt class = "col-sm-2">
            Ngày tạo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateMonth)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdAllowance" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a class="btn btn-outline-info" asp-action="Index">Trở lại</a>
    </form>
</div>
