@model fullstackCsharp.Models.Salary

@{
    ViewData["Title"] = "Edit";
}

<h1>Sửa</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" class="form-control">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdSalary" />
            <div class="form-group">
                <label asp-for="IdU" class="control-label">Tên nhân viên</label>
                <select asp-for="IdU" class="form-control" asp-items="ViewBag.IdU"></select>
                <span asp-validation-for="IdU" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BasicSalary" class="control-label">Lương cơ bản</label>
                <input asp-for="BasicSalary" class="form-control" />
                <span asp-validation-for="BasicSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-info" asp-action="Index">Trở lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
